{
  "manifest_version": 3,
  "name": "清简书签管理器",
  "version": "2.0.1",
  "description": "简洁的Chrome书签管理工具：查看、添加、编辑、删除书签。支持文件夹分类、搜索、排序等功能。",
  "permissions": [
    "bookmarks",
    "storage",
    "history"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "清简书签",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "manager.html",
  "web_accessible_resources": [
    {
      "resources": ["debug.html"],
      "matches": ["<all_urls>"]
    }
  ]
}